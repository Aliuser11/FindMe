<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="MauiCalc.MainPage">
    
    <Grid ColumnDefinitions="*,*,*,*" 
        RowDefinitions="*,*,*,*,*" 
        RowSpacing="2" 
        ColumnSpacing="2">
        
        <!-- Row 1 -->
        <Button Grid.Row="1"
                Grid.Column="0"
                CornerRadius="0"
                Text="7"
                Clicked="Button_Clicked"/>

        <Button Grid.Row="1"
             Grid.Column="1"
             CornerRadius="0"
             Text="8"
             Clicked="Button_Clicked"/>

        <Button Grid.Row="1"
                Grid.Column="2"
                CornerRadius="0"
                Text="9"
                Clicked="Button_Clicked"/>
        
        <!-- Row 2 -->

        <Button Grid.Row="2"
                Grid.Column="0"
                CornerRadius="0"
                Text="4" 
                Clicked="Button_Clicked"/>
        
    </Grid>
</ContentPage>